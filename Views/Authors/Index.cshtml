@model List<lib.Models.Author>;

@{
    ViewData["Title"] = "Список всех авторов";
}


<div class="d-flex justify-content-between">
    <h3>Список всех авторов</h3>
    <a class="h3 text-decoration-none" asp-action="Create">Добавить</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>ФИО</th>
            <th>Краткое описание</th>
            <th>Колво книг</th>
            <th>Действия</th>
        </tr>
    </thead>

    <tbody>
        @foreach(var author in Model)
        {
            <tr>
                <td>@author.Id</td>
                <td>@author.FullName</td>
                <td>
                    @( author.Desc.Length > 25 ? author.Desc.Substring(0, 22) + "..." : author.Desc)
                </td>
                <td>
                    @( author.Books == null ? 0 : author.Books.Count)
                </td>
                <td>
                    <a asp-action="Show" asp-route-id="@author.Id" class="text-info text-decoration-none">Просмотр</a>
                    <a asp-action="Edit" asp-route-id="@author.Id" class="text-primary text-decoration-none">Редактировать</a>
                    <a asp-action="Delete" asp-route-id="@author.Id" class="text-danger text-decoration-none">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
