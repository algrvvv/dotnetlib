@model lib.Models.Author;

@{
    ViewData["Title"] = "Добавление нового автора";
}


<h3>Добавление нового автора</h3>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label for="FullName">ФИО</label>
        <input type="text" placeholder="ФИО Автора" class="form-control" asp-for="FullName">
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Desc">Описание</label>
        <textarea class="form-control" placeholder="Короткое описание автора" asp-for="Desc"></textarea>
        <span asp-validation-for="Desc" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Добавить</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
